{
  "name": "angular-shopping-cart",
  "private": true,
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "scripts": {
    "ng": "ng",
    "start": "concurrently -k \"npm run start:web\" \"npm run start:api\"",
    "start:web": "cross-env NODE_OPTIONS=--openssl-legacy-provider ng serve",
    "start:api": "json-server --watch db.json --port 3000",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider ng build",
    "test": "cross-env NODE_OPTIONS=--openssl-legacy-provider ng test --karma-config karma.conf.js",
    "test:watch": "cross-env NODE_OPTIONS=--openssl-legacy-provider ng test --karma-config karma.conf.js --watch",
    "dev": "npm run start"
  },
  "dependencies": {
    "@angular/animations": "~9.1.3",
    "@angular/common": "~9.1.3",
    "@angular/compiler": "~9.1.3",
    "@angular/core": "~9.1.3",
    "@angular/forms": "~9.1.3",
    "@angular/platform-browser": "~9.1.3",
    "@angular/platform-browser-dynamic": "~9.1.3",
    "@angular/router": "~9.1.3",
    "bootstrap": "~4.4.1",
    "bootstrap-icons": "^1.13.1",
    "ngx-mask": "^9.1.4",
    "rxjs": "~6.5.5",
    "tslib": "^1.11.1",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.3",
    "@angular/cli": "~9.1.3",
    "@angular/compiler-cli": "~9.1.3",
    "@angular/language-service": "~9.1.3",
    "@types/jasmine": "~3.5.10",
    "@types/node": "^13.13.4",
    "codelyzer": "^5.2.2",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.2",
    "json-server": "^1.0.0-beta.6",
    "karma": "~5.0.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-cli": "~2.0.0",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-jasmine": "~3.1.1",
    "karma-junit-reporter": "~2.0.1",
    "ts-node": "~8.9.1",
    "tslint": "~5.20.1",
    "typescript": "~3.8.3"
  }
}